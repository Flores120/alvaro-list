

  <div>
    <form>
      <button {{action 'listingFormShow'}} class="btn btn-primary">New Listing</button>
      {{#if listingFormShow}}

        <h4>Job</h4>{{radio-button value="job" checked=selected}}
        <h4>For Sale</h4>{{radio-button value="forSale" checked=selected}}
        <h4>Personal Ad</h4>{{radio-button value="personals" checked=selected}}


        <div class="form-group">
          <label for="author">Your Name</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date"}}
        </div>

        <div class="form-group">
          <label for="location">Location</label>
          {{input value=location id="location"}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="details">Details</label>
          {{input value=details id="details"}}
        </div>

        <button {{action "saveListing"}} type="submit">Submit</button>
      {{/if}}
  </form>
</div>
