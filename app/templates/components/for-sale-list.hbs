<h3 {{action 'showListings'}}>For Sale</h3>
{{#if showListings}}
<ul>
  {{#each model as |listing|}}
    {{#if (eq listing.type "forSale")}}
      <li>
        {{#link-to 'listing' listing.id}}
          {{listing.author}} -- {{listing.title}}
        {{/link-to}}
      </li>
    {{/if}}
  {{/each}}
</ul>
{{/if}}
